<section class="text-gray-600 body-font bg-slate-200 px-48">
    <div
        class="container px-5 py-24 mx-auto flex sm:flex-nowrap flex-wrap text-xl bg-slate-200"
        id="contact"
    >
        <div
            class="leading-relaxed flex flex-col md:ml-auto w-full md:py-8 mt-8 md:mt-0 bg-slate-200"
        >
            <h2
                class="sm:text-3xl text-2xl title-font font-medium text-gray-900 mt-4 mb-4"
            >
                Me contacter
            </h2>
            <p class="mb-5 text-gray-600">
                Si vous souhaitez des informations supplémentaires sur mes
                prestations, contactez-moi !
            </p>
            <div class="mb-4 mx-10">
                <label for="lastname" class="leading-7 text-xl text-gray-600"
                    >Nom</label
                >
                <input
                    type="text"
                    id="lastname"
                    name="lastname"
                    class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out my-2"
                />
            </div>
            <div class="mb-4 mx-10">
                <label for="firstname" class="leading-7 text-xl text-gray-600"
                    >Prénom</label
                >
                <input
                    type="text"
                    id="firstname"
                    name="firstname"
                    class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out my-2"
                />
            </div>
            <div class="mb-4 mx-10">
                <label for="email" class="leading-7 text-xl text-gray-600"
                    >Email</label
                >
                <input
                    type="email"
                    id="email"
                    name="email"
                    class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out my-2"
                />
            </div>
            <div class="mb-4 mx-10">
                <label for="phonenumber" class="leading-7 text-xl text-gray-600"
                    >Numéro de téléphone</label
                >
                <input
                    type="number"
                    id="phonenumber"
                    name="phonenumber"
                    class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out my-2"
                />
            </div>
            <div class="mb-4 mx-10">
                <label for="message" class="leading-7 text-xl text-gray-600"
                    >Message</label
                >
                <textarea
                    id="message"
                    name="message"
                    class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 h-32 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out my-2"
                ></textarea>
            </div>
            <div class="mb-4 mx-10">
                <span class="mr-3">Type de demande</span>
                <div class="relative">
                    <select
                        id="countries"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 my-2"
                    >
                        <option selected></option>
                        <option
                            class="leading-7 text-xl text-gray-600"
                            value="atelier">Atelier</option
                        >
                        <option
                            class="leading-7 text-xl text-gray-600"
                            value="seriousgame">Serious Game</option
                        >
                        <option
                            class="leading-7 text-xl text-gray-600"
                            value="escapegame">Escape Game</option
                        >
                        <option
                            class="leading-7 text-xl text-gray-600"
                            value="conference">Conférence</option
                        >
                    </select>
                    <span
                        class="absolute right-0 top-0 h-full w-10 text-center text-gray-600 pointer-events-none flex items-center justify-center"
                    >
                    </span>
                </div>
                <button
                    class="text-white bg-indigo-500 border-0 py-2 mt-5 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg"
                    >Envoyer</button
                >
            </div>
        </div>
    </div>
</section>
